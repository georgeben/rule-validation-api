{
  "env": {
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": [2, "double", { "avoidEscape": true }],
    "camelcase": "off"
  }
}
